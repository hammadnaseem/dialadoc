<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10sp"
    android:id="@+id/message_single_layout"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_person_black_24dp"

        android:id="@+id/message_profile_picture" />


    <ImageView
        android:id="@+id/receive_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_toEndOf="@+id/message_profile_picture"
        android:background="@drawable/message_shape"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:visibility="gone"
        android:scaleType="fitXY"
        />





    <TextView
        android:id="@+id/single_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:layout_toEndOf="@+id/message_profile_picture"
        android:background="@drawable/message_shape"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="14sp" />

   <ImageView
       android:id="@+id/sender_image"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@color/colorPrimary"
       android:layout_alignParentEnd="true"
       android:layout_alignParentTop="true"
       android:background="@drawable/sender_message_shape"

       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:visibility="gone"
       android:scaleType="fitXY"
       />






    <TextView
        android:id="@+id/sender_single_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sender_message_shape"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:visibility="visible"
        android:textColor="#000000"
        android:textSize="14sp" />
</RelativeLayout>