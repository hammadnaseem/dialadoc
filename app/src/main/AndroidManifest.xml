<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sda.dialadoc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sda.dialadoc.Activities.CameraActivity"></activity>
        <activity
            android:name="com.sda.dialadoc.Activities.ChatListActivity"
            android:parentActivityName="com.sda.dialadoc.Activities.MainActivity" />
        <activity
            android:name="com.sda.dialadoc.Activities.ChatActivity"
            android:parentActivityName="com.sda.dialadoc.Activities.ChatActivity" />
        <activity
            android:name="com.sda.dialadoc.Activities.Appointment"
            android:parentActivityName="com.sda.dialadoc.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sda.dialadoc.Activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sda.dialadoc.Activities.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sda.dialadoc.Activities.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sda.dialadoc.Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>